  {
    "wandb":{
      "name" : "roberta_large_stratified_using_MLM-tok-size-256",
      "tags" : ["ROBERT_LARGE", "stratified", "10epoch"], 
      "group" : "MLM"
    },

    "aug": true,

    "train":{
      "focal_loss":{
        "true" : false,
        "alpha" : 0.1,
        "gamma" : 0.25
      },

      "TrainingArguments" : {
        "output_dir":"./results",          
        "save_total_limit":1,              
        "save_steps":100,                 
        "num_train_epochs":3,              
