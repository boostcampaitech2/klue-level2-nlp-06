        "per_device_train_batch_size":38,  
        "per_device_eval_batch_size":38,   
        "warmup_steps":500,                
        "weight_decay":0.01,               
        "logging_dir":"./logs",            
        "logging_steps":100,              
        "evaluation_strategy":"steps", 
        "eval_steps" : 100,            
        "load_best_model_at_end" : true
      },
      "early_stop": {
        "true" : true,
        "patience" : 5
      }
      
    },
    

    "model" :{
      "huggingface": "/opt/ml/transformers/examples/pytorch/language-modeling/#",
      "config":{
        "num_labels" : 30
      }
    }
  }